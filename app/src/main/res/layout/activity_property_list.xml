<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.PropertyListActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/property_list_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/property_list_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/property_list_toolbar"/>

    <include
        android:layout_height="50dp"
        android:layout_width="match_parent"
        layout="@layout/layout_property_list_bottom_bar"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>